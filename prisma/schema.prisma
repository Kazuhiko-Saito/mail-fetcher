generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model email {
  id          Int      @id @default(autoincrement())
  message_id  String   @unique
  subject     String
  sender      String
  received_at DateTime
  body        String   @db.Text
  created_at  DateTime @default(now())
}

model parsed_email {
  id          Int      @id @default(autoincrement())
  message_id  String   @unique
  subject     String
  sender      String
  received_at DateTime
  body        String   @db.Text
  tags        String[]
  summary     String   @db.Text
  created_at  DateTime @default(now())
}
