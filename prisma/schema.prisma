generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model mail_daily {
  id          Int      @id @default(autoincrement())
  message_id  String   @unique
  subject     String
  sender      String
  received_at DateTime
  body        String   @db.Text
  created_at  DateTime @default(now())
}

model mail_monthly {
  id          Int      @id @default(autoincrement())
  message_id  String   @unique
  subject     String
  sender      String
  received_at DateTime
  body        String   @db.Text
  tag         String[]
  summary     String   @db.Text
  created_at  DateTime @default(now())
}

model mail_selected {
  id          Int      @id @default(autoincrement())
  message_id  String   @unique
  subject     String
  sender      String
  received_at DateTime
  body        String   @db.Text
  tag         String[]
  summary     String   @db.Text
  created_at  DateTime @default(now())
}

model mail_keyword {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  re         String   @db.Text
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model mail_extraction {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  re         String   @db.Text
  num        Int[]
  multi_line Boolean
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
